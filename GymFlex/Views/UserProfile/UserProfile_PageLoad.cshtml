@model GymFlex.Models.UserProfileModel

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<style>
    body {
        background: #f6f7fb;
    }

    .profile-header {
        background: linear-gradient(135deg, #005CFF, #8A2EFF);
        color: white;
        border-radius: 18px;
        padding: 22px;
        box-shadow: 0 10px 25px rgba(0,0,0,.15);
    }

    .info-card {
        border-radius: 18px;
        border: 0;
        background: rgba(255,255,255,.9);
        backdrop-filter: blur(6px);
        transition: .3s;
    }

        .info-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 20px rgba(0,0,0,.12);
        }

    .today-card {
        border-left: 8px solid #ff3b3b;
        background: linear-gradient(135deg, #fff3f3, #ffffff);
        border-radius: 18px;
    }

    .label {
        font-weight: 600;
        color: #444;
    }

    .meal-pill {
        background: #fff;
        border-radius: 30px;
        padding: 8px 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,.1);
        margin-bottom: 6px;
    }
</style>

<div class="container mt-4">

    <!-- HEADER -->
    <div class="profile-header mb-4 d-flex justify-content-between flex-wrap">

        <div>
            <h2 class="mb-1">👤 @(Model?.Name ?? "User")</h2>
            <p class="mb-0">User ID: <b>@Model?.User_Id</b></p>
        </div>

        <div class="mt-2">

            <a class="btn btn-light me-2"
               asp-controller="UserProfile"
               asp-action="EditUserProfile_PageLoad"
               asp-route-id="@Model?.User_Id">
                ✏️ Edit Profile
            </a>

            <a class="btn btn-warning me-2"
               asp-controller="ChangePassword"
               asp-action="ChangePassword_PageLoad">
                🔐 Change Password
            </a>

            <a class="btn btn-danger"
               asp-controller="Login"
               asp-action="Login_PageLoad">
                🚪 Logout
            </a>
        </div>
    </div>

    <!-- FLASH MESSAGE -->
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-info">@TempData["msg"]</div>
    }

    @if (Model == null)
    {
        <div class="alert alert-danger">
            ❌ Profile failed to load. Please login again.
        </div>
    }
    else
    {
        <!-- ⭐⭐ MAIN PRIORITY CARD ⭐⭐ -->
        <div class="card shadow today-card p-4 mb-4">

            <h4 class="text-danger fw-bold mb-2">
                🔥 Today’s Schedule
            </h4>

            <small class="text-muted">
                Stay consistent. Small daily progress matters 💪
            </small>

            <hr />

            <div class="row">

                <!-- TODAY EXERCISES -->
                <div class="col-md-6">

                    <h6 class="text-primary fw-bold">🏋 Today’s Exercises</h6>

                    @if (Model.TodayExercises == null || !Model.TodayExercises.Any())
                    {
                        <p class="text-muted">No workout assigned today</p>
                    }
                    else
                    {
                        <ul class="mt-2">
                            @foreach (var ex in Model.TodayExercises)
                            {
                                <li>@ex</li>
                            }
                        </ul>

                        <!-- ▶ START WORKOUT BUTTON -->
                        <a class="btn btn-success btn-sm mt-2"
                           asp-controller="WorkoutProgress"
                           asp-action="StartWorkout"
                           asp-route-userId="@Model.User_Id">
                            ▶ Start Today’s Workout
                        </a>
                    }

                </div>

                <!-- TODAY MEALS -->
                <div class="col-md-6">

                    <h6 class="text-success fw-bold">🥗 Today’s Meals</h6>

                    @if (Model.TodayMeals == null || !Model.TodayMeals.Any())
                    {
                        <p class="text-muted">No meals assigned today</p>
                    }
                    else
                    {
                        @foreach (var meal in Model.TodayMeals)
                        {
                            <div class="meal-pill">🍽 @meal</div>
                        }
                    }

                <!-- 📜 WORKOUT HISTORY BUTTON -->
                <a class="btn btn-outline-dark btn-sm mt-3"
                   asp-controller="WorkoutProgress"
                   asp-action="WorkoutHistory"
                   asp-route-userId="@Model.User_Id">
                    📜 View Workout History
                </a>

            </div>

        </div>
    </div>

    <!-- OTHER SECTIONS -->
    <div class="row g-4">

        <!-- PERSONAL DETAILS -->
        <div class="col-md-6">

            <div class="card info-card shadow p-3">

                <h5 class="text-primary">🧾 Personal Details</h5>
                <hr />

                <p><span class="label">Age:</span> @Model.Age</p>
                <p><span class="label">Height:</span> @Model.Height cm</p>
                <p><span class="label">Weight:</span> @Model.Weight kg</p>

                <div class="alert alert-light border">

                    <span class="label">BMI:</span>

                    <span class="badge
                            @(Model.BMI < 18.5 ? "bg-warning" :
                                                        Model.BMI < 25 ? "bg-success" :
                                                        Model.BMI < 30 ? "bg-warning text-dark" :
                                                        "bg-danger")">
                            @Model.BMI
                        </span>

                        <span class="ms-2 small text-muted">
                            @(Model.BMI < 18.5 ? "Underweight"
                                                    : Model.BMI < 25 ? "Normal"
                                                    : Model.BMI < 30 ? "Overweight"
                                                    : "Obese")
                        </span>
                    </div>

                    <p>
                        <span class="label">Goal:</span>
                        <span class="badge bg-info">@Model.Goal</span>
                    </p>

                    <p>
                        <span class="label">Activity Level:</span>
                        <span class="badge bg-secondary">@Model.Activity_Level</span>
                    </p>

                </div>
            </div>

            <!-- ASSIGNED PLANS -->
            <div class="col-md-6">

                <div class="card info-card shadow p-3">

                    <h5 class="text-success">📋 Assigned Plans</h5>
                    <hr />

                    <p>
                        <span class="label">Workout Plan:</span><br />
                        <span class="badge bg-primary">
                            @(string.IsNullOrEmpty(Model.WorkoutPlanName)
                                                    ? "Not Assigned"
                                                    : Model.WorkoutPlanName)
                        </span>
                    </p>

                    <p>
                        <span class="label">Diet Plan Goal:</span><br />
                        <span class="badge bg-warning text-dark">
                            @(string.IsNullOrEmpty(Model.DietGoal)
                                                    ? "Not Assigned"
                                                    : Model.DietGoal)
                        </span>
                    </p>

                    <div class="mt-2">
                        <a class="btn btn-outline-primary btn-sm"
                           asp-controller="UserWorkout"
                           asp-action="ViewWorkoutDays"
                           asp-route-userId="@Model.User_Id">
                            🏋 View Full Workout Plan
                        </a>

                        <a class="btn btn-outline-success btn-sm"
                           asp-controller="UserDiet"
                           asp-action="ViewDietPlan"
                           asp-route-userId="@Model.User_Id">
                            🥗 View Full Diet Plan
                        </a>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

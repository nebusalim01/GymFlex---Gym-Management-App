@model GymFlex.Models.AdminProfileModel

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="container-fluid">

    <!-- Top Navbar -->
    <nav class="navbar navbar-dark bg-dark mb-3">
        <span class="navbar-brand ms-3">
            <b>GymFlex Admin Panel</b>
        </span>

        <span class="text-white me-3">
            Logged in as: @Model.Name
        </span>
    </nav>

    <div class="row">

        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 bg-light border-end" style="min-height: 90vh;">

            <h5 class="mt-3 text-center">Menu</h5>
            <hr />

            <ul class="nav flex-column">

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="AdminProfile_Pageload" asp-route-id="@Model.AdminId">
                        🧑‍💼 Profile
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="ManageUsers">
                        👥 Manage Users
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link">
                        🏋 Workout Plans
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link">
                        🥗 Diet Plans
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link">
                        🎯 Assign Plans
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-danger" asp-controller="Login" asp-action="Login_PageLoad">
                        🚪 Logout
                    </a>
                </li>

            </ul>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 p-4">

            <h3>Admin Profile</h3>
            <hr />

            <div class="row">

                <div class="col-md-6">

                    <div class="card shadow p-3">

                        <h5 class="text-center mb-3">Profile Details</h5>

                        <p><b>Admin ID:</b> @Model.AdminId</p>
                        <p><b>Name:</b> @Model.Name</p>
                        <p><b>Phone:</b> @Model.Phone</p>
                        <p><b>Email:</b> @Model.Email</p>
                        <p><b>Created On:</b> @Model.CreatedAt</p>

                        <div class="text-center mt-3">
                            <button class="btn btn-primary" disabled>Edit Profile (Later)</button>
                        </div>

                    </div>
                </div>

                <!-- Stats Widgets -->
                <div class="col-md-6">

                    <div class="card shadow p-3 mb-3 bg-success text-white">
                        <h5>Total Users</h5>
                        <p>(We will bind count here later)</p>
                    </div>

                    <div class="card shadow p-3 mb-3 bg-info text-white">
                        <h5>Workout Plans</h5>
                        <p>(We will bind count here later)</p>
                    </div>

                    <div class="card shadow p-3 bg-warning text-white">
                        <h5>Diet Plans</h5>
                        <p>(We will bind count here later)</p>
                    </div>

                </div>

            </div>

        </div>

    </div>
</div>
